<div class="grid">
  <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
  <% end %>
</div>
<div class="submit-answer">
  <form action="./score" method="post" data-turbo="false">
    <label for="answer">Look at these ten letters and make the longest word you can...</label>
    <input type="text" id="answer" value="" name="answer">
    <input type="submit" value="Check!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters%>
  </form>
</div>
